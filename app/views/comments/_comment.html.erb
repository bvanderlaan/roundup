<p class="username"><%= current_user ? link_to( comment.user.to_s, comment.user ) : comment.user.to_s %></p>
<div><%= auto_link( Markdown.new( comment.body ).to_html.html_safe ) %></div>
<time datetime=<%= "#{comment.created_at}"%>>
	<p class="date"><%= comment.created_at.strftime("%B %e, %Y") %></p>
</time>