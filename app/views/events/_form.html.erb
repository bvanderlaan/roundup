<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, maxlength: "72", :autofocus => true %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>
    Mark down referance can be found <a href="http://kramdown.gettalong.org/quickref.html" target="_blank">here</a>.
  </div>
  <div class="field">
    <%= f.label :location, "Event's Location" %><br>
    <%= f.text_field :location, maxlength: "72" %>
  </div>
  <div class="field">
    <%= f.label :startdatetime, "Event's Start Date and Time" %><br>
    <%= f.datetime_local_field :startdatetime %>
  </div>
  <div class="field">
    <%= f.label :duration, "How long will the event be in minutes" %><br>
    <%= f.number_field :duration %>
  </div>
  <div class="actions">
    <%= f.submit :class=>"button" %>
    <%= link_to "Don't Save", @event, { :class=>"button" } %>
  </div>
<% end %>
