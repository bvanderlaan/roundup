<div id="loginForm" class="roundupform">
	<h1>Log In</h1>
	<p id="notice"><%= notice %></p>

	<%= form_tag sessions_path do %>
		<div class="field">
			<%= label_tag :email %><br/>
			<%= email_field_tag :email, '', autofocus: true %>
		</div>
		<div class="field">
			<%= label_tag :password %><br/>
			<%= password_field_tag :password %>
		</div>
		<div class="actions">
			<%= submit_tag "Log In", { :class=>"button" } %>
		</div>
	<% end %>
</div>