<!DOCTYPE html>
<html>
<head>
  <title>Roundup</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="header">
	<div id="logo">
		<h1><%= link_to "Roundup", root_path %> </h1>
	</div>
	<div id="user_menu">
		<ul>
			<% if current_user %>
			<li>Hi <%= link_to current_user.to_s, current_user %></li>
			<li><%= link_to "Log Out", logout_path, { :class =>"button" } %></li>
			<% else %>
			<li><%= link_to "Sign Up", signup_path, { :class =>"button" } %></li>
			<li><%= link_to "Log In", login_path, { :class =>"button" } %></li>
			<% end %>
		</ul>
	</div>
	<div style="clear: both;"></div>
</div>
<div id="main">
<%= yield %>
</div>

</body>
</html>
